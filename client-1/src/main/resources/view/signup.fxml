<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SignupController"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: white;">

    <ImageView fx:id="logoImage" fitWidth="120" preserveRatio="true">
        <image>
            <Image url="@../assets/logo.png" />
        </image>
    </ImageView>

    <Label text="Sign Up" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #f57c00;" />

    <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>
    <ComboBox fx:id="roleBox" promptText="Select Role" maxWidth="250"/>

    <TextField fx:id="fullNameField" promptText="Full Name" maxWidth="250"/>
    <TextField fx:id="uiuIdField" promptText="UIU ID" maxWidth="250"/>
    <TextField fx:id="departmentField" promptText="Department" maxWidth="250"/>

    <Button text="Register" onAction="#handleSignup"
            style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-weight: bold;"
            maxWidth="250"/>

    <Hyperlink text="Back to Login" onAction="#goToLogin"/>

    <Label fx:id="messageLabel"
           text=""
           wrapText="true"
           alignment="CENTER"
           maxWidth="250"
           visible="true"
           style="-fx-font-size: 14px; -fx-text-fill: green;"/>
</VBox>
